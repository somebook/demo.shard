%head
  %meta{ charset: "utf-8" }
  %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
  %meta{ name: "description", content: t("front.demo.description") }
  %meta{ name: "viewport", content: "width=device-width" }
  %link{ rel: "icon", href: "/favicon.ico", type: "image/x-icon"}
  %link{ rel: "shortcut icon", href: "/favicon.ico", type: "image/x-icon"}

  %title= t('front.demo.title')
  = stylesheet_link_tag "demo"
  %link{ href: 'http://fonts.googleapis.com/css?family=Philosopher&subset=latin,cyrillic', rel: 'stylesheet', type: 'text/css'}
  %link{ href: "http://vjs.zencdn.net/c/video-js.css", rel: "stylesheet" }
  :erb
    <!--[if IE 8]>  <%= stylesheet_link_tag("ie/ie.css") %> <![endif]-->
  = javascript_include_tag "demo"
  %script{ src: "http://vjs.zencdn.net/c/video.js" }
  %script{ src: "http://vk.com/js/api/share.js?11" }
  = yield :head

  %body
    / .Content Wrapper
    .container-fluid.content-wrapper
      / .Logo Bar & Login
      .row-fluid
        .logobar
          .logo.pull-left
            = link_to t('front.demo.title'), root_path
      / /.Logo Bar & Login
      #access.navbar
        = render partial: "demo/shared/navigation", locals: { part: :main }
      .row-fluid
        .span9
          .row-fluid
            = yield
          / /row
        / /span
        / Top Sidebar
        .span3.sidebar
          = render "demo/shared/social_accounts"
          = render "demo/shared/event_widget"
          = render "demo/shared/last_posts"
      / /row
      / .BackToTopBtn
      #toTop.btn
        Наверх
      / /.BackToTopBtn
      = render "demo/shared/footer"